# Get External IP / Internet Speed
alias myip="curl https://ipinfo.io/json" # or /ip for plain-text ip

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000' # Or python -m SimpleHTTPServer :)

# ChatGPT nodejs
alias gpt="$HOME/nodejs-chatgpt/run-chatgpt.sh"

# Updates
alias u="sudo apt update && sudo apt upgrade -y"
alias ur="sudo apt update && sudo apt upgrade -y && shutdown -r now"
alias us="sudo apt update && sudo apt upgrade -y && shutdown now"

# Fix Brave not rendering elements correct
alias brave-fix="rm -rf ~/.config/BraveSoftware/Brave-Browser/Default/GPUCache"

# CPU Sensor
alias cpu="watch -n 2 sensors"

# GPU Sensor
alias nvidia="watch -n 2 nvidia-smi"

# code .
alias c="code ."

# npm run dev
alias dev="npm run dev"

# gh browse
alias b="gh browse"

# hardware information
alias hardware="sudo lshw"

# restart computer
alias reboot="shutdown -r now"